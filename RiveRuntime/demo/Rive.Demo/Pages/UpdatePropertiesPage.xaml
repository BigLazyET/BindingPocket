<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RiveRuntime.Maui.Controls;assembly=RiveRuntime.Maui"
             xmlns:viewModels="clr-namespace:Rive.Demo.ViewModels"
             x:DataType="viewModels:UpdatePropertiesViewModel"
             x:Class="Rive.Demo.Pages.UpdatePropertiesPage">
    <ScrollView>
        <VerticalStackLayout>

            <controls:RiveSpriteView Margin="0,40,0,0"
                                     ResourceName="emoji"
                                     ArtboardName="{Binding ArtboardName}"
                                     Fit="Cover"
                                     HeightRequest="400" />

            <FlexLayout Wrap="Wrap"
                        Padding="10"
                        HorizontalOptions="Center">

                <Button Text="ArtboardName"
                        Margin="5,5,0,5"
                        Command="{Binding UpdatePropertyCommand, Mode=OneTime}"
                        CommandParameter="artboard" />

            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>