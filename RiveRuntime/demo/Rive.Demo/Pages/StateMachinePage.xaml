<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RiveRuntime.Maui.Controls;assembly=RiveRuntime.Maui"
             x:Class="Rive.Demo.Pages.StateMachinePage">
    <ScrollView>
        <Grid RowDefinitions="350,*" RowSpacing="25">
            <controls:RiveSpriteView x:Name="RsView" Grid.Row="0" Fit="Cover" ResourceName="animatedloginscreen" StateMachineName="Login Machine"/>
            
            <StackLayout Grid.Row="1" Spacing="25" Padding="25, 0">
                <HorizontalStackLayout Spacing="10">
                    <Switch x:Name="IsCheckingSwitch" Toggled="IsCheckingSwitch_OnToggled"/>
                    <Label Text="Checking" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Slider x:Name="LookSlider"
                        IsEnabled="{Binding IsToggled, Source={x:Reference IsCheckingSwitch}, x:DataType=Switch}"
                        Minimum="0" Maximum="100" Value="0" ValueChanged="LookSlider_OnValueChanged"/>

                <HorizontalStackLayout Spacing="10">
                    <Switch x:Name="IsHandsUpSwitch" Toggled="IsHandsUpSwitch_OnToggled"/>
                    <Label Text="Hands up" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Button Text="Failure" Clicked="OnFailureClicked" />

                <Button Text="Success" Clicked="OnSuccessClicked" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>